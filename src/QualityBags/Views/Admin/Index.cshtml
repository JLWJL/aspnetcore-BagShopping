                @Html.DisplayNameFor(model => model.Enabled)
            </th>
            <th>


            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.UserName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NormalizedEmail)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EmailConfirmed)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Address)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PhoneMobile)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PhoneHome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PhoneWork)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PhoneNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Enabled)
            </td>



            <td>
                @if (item.Enabled)
                {
                    <a asp-action="EnableDisable" asp-controller="Admin" asp-route-id="@item.Id" class="btn btn-danger">Disable</a>
                }
                else
                {
                    <a asp-action="EnableDisable" asp-route-id="@item.Id" class="btn btn-default">Enable</a>
                }
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
