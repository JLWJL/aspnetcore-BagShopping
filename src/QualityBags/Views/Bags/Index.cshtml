@model IEnumerable<QualityBags.Models.Bag>

@{
    ViewData["Title"] = "All Category";
}

<h2>Index</h2>


<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ImagePath)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BagName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            @*<th>
                @Html.DisplayNameFor(model => model.ImagePath)
            </th>*@
            <th>
                @Html.DisplayNameFor(model => model.Price)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
    var errImg = Href("~/images/Bags/Default.jpg");
        <tr>
            <td>
                <img src="@item.ImagePath" alt="Bag image" style="width:100px; height:100px" onerror="this.onerror=null;this.src='@errImg'"/>
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BagName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            @*<td>
                @Html.DisplayFor(modelItem => item.ImagePath)
            </td>*@
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.BagID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.BagID">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.BagID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
<p>
    <a asp-action="Create">Create New</a>
</p>
